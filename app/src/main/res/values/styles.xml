<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PrimaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTitle" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="DeepBlue" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/clear_blue</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.DeviceDefault.CalendarView">
        <item name="android:focusedMonthDateColor">@color/bright_green</item>
        <item name="android:weekNumberColor">@color/deep_blue</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

</resources>
